<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="center"
	android:layout_margin="50dp"
	android:layout_width="600dp"
	android:layout_height="wrap_content">

	<LinearLayout
		android:id="@+id/layout_head"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:orientation="vertical"
		android:padding="14dp"
		android:gravity="center"
		android:background="@drawable/vchip_pin_head_bg"
		android:layout_alignTop="@+id/layout_parent"
		>

		<TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="34dp"
		android:layout_gravity="center_horizontal"
		android:text="@string/enter_password"
		android:textColor="#FFFFFFFF"
		android:gravity="center"
		android:textSize="24sp" 
		android:layout_marginTop="20dp"
		android:layout_marginBottom="10dp" />	
	</LinearLayout> 

	<LinearLayout
		android:id="@+id/layout_body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="14px"
		android:gravity="center"
		android:background="@drawable/vchip_pin_body_bg"
		android:layout_above="@+id/layout_tail" 
		android:layout_below="@+id/layout_head" >
    
		<ListView
			android:id="@+id/set_list"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"					     				     
			android:scrollbars="vertical"/> 		

	</LinearLayout> 
	
	<LinearLayout
		android:id="@+id/layout_tail" 
		android:layout_width="fill_parent"
		android:layout_height="65dp"
		android:orientation="vertical"
		android:background="@drawable/vchip_pin_tail_bg"
		android:layout_alignBottom="@+id/layout_parent"
		>
		<RelativeLayout
				android:id="@+id/inforbar_line" 
				android:layout_width="fill_parent"
				android:layout_height="2px"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="12dp"
				android:background="@drawable/line"
				>	
		</RelativeLayout>
     
	     	<LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="horizontal"
    		android:gravity="center"
    		android:layout_marginBottom="8px">
		
    		<ImageView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
				android:background="@drawable/move"
    		>
    		</ImageView>
    		<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/help_info_move"
		        android:textColor="#FFFFFFFF"
		        android:textSize="20sp" 
		        android:layout_marginRight="30px"
		        />
    		<ImageView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
				android:background="@drawable/enter"
    		></ImageView>
    		<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/help_info_select"
		        android:textColor="#FFFFFFFF"
		        android:textSize="20sp"
		        android:layout_marginRight="30px"
		        />
    		<ImageView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
				android:background="@drawable/return_icon"
    		></ImageView>
    		<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/help_info_return"
		        android:textColor="#FFFFFFFF"
		        android:textSize="20sp" />
		</LinearLayout>
	</LinearLayout>	
	
</LinearLayout>
