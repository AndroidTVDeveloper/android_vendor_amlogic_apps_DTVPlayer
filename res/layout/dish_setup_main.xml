						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="120px"
						android:layout_height="35px"
						android:gravity="center"/>
					<TextView
						android:text="@string/dish_setup_conf_button_des4_info"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:layout_weight="1"/>		
				</LinearLayout>	
			</LinearLayout> 	

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="40px">
				
				<LinearLayout
					android:id="@+id/editProgramOpDes05"
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="45px"
					android:layout_weight="1">
					<TextView
						android:background="@drawable/btn_help_des"
						android:text="@string/dish_setup_conf_button_des5"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="120px"
						android:layout_height="35px"
						android:gravity="center"/>
					<TextView
						android:text="@string/dish_setup_conf_button_des5_info"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:layout_weight="1"/>		
				</LinearLayout>	
				<LinearLayout
					android:id="@+id/editProgramOpDes06"
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="40px"
					android:layout_weight="1">
					<TextView
						android:background="@drawable/btn_help_des"
						android:text="@string/dish_setup_conf_button_des6"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="120px"
						android:layout_height="35px"
						android:gravity="center"/>
					<TextView
						android:text="@string/dish_setup_conf_button_des6_info"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:layout_weight="1"/>	
				</LinearLayout>	
				<LinearLayout
					android:id="@+id/editProgramOpDes07"
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="40px"
					android:layout_weight="1"
