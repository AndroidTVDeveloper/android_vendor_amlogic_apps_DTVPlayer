<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout 
			android:id="@+id/RelativeLayout01" 
			android:layout_centerHorizontal="true"
			android:layout_marginTop="100px" 
			android:layout_width="486px" 
			android:layout_height="429px"
			android:orientation="vertical"
			android:background="@drawable/settings_bg">
	    
	 	    <RelativeLayout
				android:layout_alignParentTop="true"		
				android:layout_centerInParent="true"  
				android:layout_width="fill_parent" 
				android:layout_height="43px">  
				
	           <ImageView android:id="@+id/arrow_left"
				android:layout_width="32px" android:layout_height="43px"
				android:layout_alignParentBottom="true"
				android:background="@drawable/dtvchannellist_button_arrow_left"
				android:layout_toRightOf="@+id/RelativeLayout02" />		      
	            
	           <TextView 
			      android:id="@+id/mPath"
			      android:layout_width="420px"
			      android:layout_height="fill_parent"
			      android:layout_toRightOf="@+id/arrow_left"
			      android:gravity="center"
			      android:textSize="24sp">
			    </TextView>
	            
				<ImageView android:id="@+id/arrow_right"
				android:layout_width="32px" android:layout_height="43px"
				android:layout_alignParentBottom="true"
				android:background="@drawable/dtvchannellist_button_arrow_right"
				android:layout_toRightOf="@+id/mPath" />	
		    </RelativeLayout>   
		    
		    <RelativeLayout android:id="@+id/RelativeLayout03"
	    		android:layout_alignParentBottom="true"	
				android:layout_centerInParent="true"  
				android:layout_width="fill_parent" 
				android:layout_height="336px"
				>		
			    <ListView 
			      android:id="@+id/ListView_channel"
			      android:layout_width="wrap_content"
			      android:layout_height="fill_parent"
			      
			    ></ListView>
	    	</RelativeLayout>
	    	<LinearLayout
	    		android:layout_width="fill_parent"
				android:layout_height="50px"
				android:layout_marginRight="20px"
				android:layout_marginLeft="20px"
	    		android:orientation="vertical">
				<RelativeLayout
					android:id="@+id/inforbar_line" 
					android:layout_width="fill_parent"
					android:layout_height="2px"
					android:background="@drawable/line"
					>	
				</RelativeLayout>
		     
	  	     	<LinearLayout
		    		android:layout_width="match_parent"
		    		android:layout_height="match_parent"
		    		android:orientation="horizontal"
		    		android:gravity="center"
		    		android:layout_marginBottom="8px">
	    		
		    		<ImageView 
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
						android:background="@drawable/move"
		    		>
		    		</ImageView>
		    		<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        android:text="@string/help_info_move"
				        android:textColor="#FFFFFFFF"
				        android:textSize="20sp" 
				        android:layout_marginRight="30px"
				        />
		    		<ImageView 
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
						android:background="@drawable/enter"
		    		></ImageView>
		    		<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        android:text="@string/help_info_select"
				        android:textColor="#FFFFFFFF"
				        android:textSize="20sp"
				        android:layout_marginRight="30px"
				        />
		    		<ImageView 
		    			android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
						android:background="@drawable/return_icon"
		    		></ImageView>
		    		<TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        android:text="@string/help_info_return"
				        android:textColor="#FFFFFFFF"
				        android:textSize="20sp" />
	    		</LinearLayout>
			</LinearLayout>	
     </LinearLayout>
</RelativeLayout>
 
