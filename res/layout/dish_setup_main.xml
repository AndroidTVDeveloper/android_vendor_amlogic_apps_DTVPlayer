						android:background="@drawable/btn_help_des"
						android:text="@string/dish_setup_conf_button_des2"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="120px"
						android:layout_height="35px"
						android:gravity="center"/>
					<TextView
						android:text="@string/dish_setup_conf_button_des2_info"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:layout_weight="1"/>	
				</LinearLayout>	
				<LinearLayout
					android:id="@+id/editProgramOpDes03"
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="40px"
					android:layout_weight="1">
					<TextView
						android:background="@drawable/btn_help_des"
						android:text="@string/dish_setup_conf_button_des3"
						android:layout_marginLeft="10px"
						android:textSize="16sp"
						android:layout_width="120px"
						android:layout_height="35px"
