<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">



	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">
	   
		<TextView
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:text="@string/item_no"/>
		<TextView android:id="@+id/sat_number"
			android:layout_width="100px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:singleLine="true"/>
	</LinearLayout>
    
	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">
	   
		<TextView
			android:id="@+id/text_sat_name"
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:text="@string/sat_name"/>
		<EditText android:id="@+id/edittext_sat_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"/>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">
		<TextView
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:text="@string/title_longitude_direction"/>

		<Button
			android:id="@+id/edit_direction"
			android:layout_width="80px"
			android:layout_height="wrap_content"
		></Button>

	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">
		<TextView
			android:layout_width="200px"
			android:textSize="20sp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:singleLine="true"
			android:text="@string/title_longitude_angle"/>
		<EditText android:id="@+id/angle0"
			android:layout_width="120px"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:numeric="integer"/>
		<TextView
			android:id="@+id/dot"
			android:textSize="15sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/dot"/>
		<EditText android:id="@+id/angle1"
			android:layout_width="70px"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:numeric="integer"/>
	</LinearLayout>
 
</LinearLayout>
 